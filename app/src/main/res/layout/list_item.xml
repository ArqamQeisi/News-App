<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/section_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Sample"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="Jan 23, 2020"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="bottom"
                android:textSize="16sp"
                android:gravity="end"
                android:paddingRight="10dp"
                android:textStyle="italic"
                android:textColor="@android:color/holo_red_dark"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp" />
        </LinearLayout>
            <TextView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="23sp"
                android:layout_height="wrap_content"
                tools:text="Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample Sample "/>
        </LinearLayout>
</androidx.cardview.widget.CardView>